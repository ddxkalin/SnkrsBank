@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="this.Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="change-password-form" method="post">
            <div class="alert alert-alt alert-danger alert-dismissable alert-validation mb fade in" role="alert" asp-validation-summary="All">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"></button>
            </div>

            <div class="form-group">
                <div class="md-input">
                    <label asp-for="Input.OldPassword" class="md-input-placeholder"></label>
                    <input type="password" asp-for="Input.OldPassword" class="md-input-control">
                </div>
                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
            </div>


            <div class="form-group">
                <div class="md-input">
                    <label asp-for="Input.NewPassword" class="md-input-placeholder"></label>
                    <input type="password" asp-for="Input.NewPassword" class="md-input-control">
                </div>
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>


            <div class="form-group">
                <div class="md-input">
                    <label asp-for="Input.ConfirmPassword" class="md-input-placeholder"></label>
                    <input type="password" asp-for="Input.ConfirmPassword" class="md-input-control">
                </div>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-default mt">Update password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
