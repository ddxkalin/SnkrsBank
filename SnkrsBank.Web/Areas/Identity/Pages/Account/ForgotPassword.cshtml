@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="panel panel-white panel-large">
    <div class="panel-body pt-2x pb">

        <h2>@ViewData["Title"]</h2>
        <div class="secondary">Enter your email to receive instructions for resetting your password</div>

        <div class="row">
            <div class="col-xs-12">
                <form method="post" class="form-custom">

                    <div class="form-group">
                        <div class="col-xs-12">
                            <div class="md-input">
                                <label asp-for="Input.Email" class="md-input-placeholder"></label>
                                <input type="text" asp-for="Input.Email" class="md-input-control">
                            </div>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group mt">
                        <div class="col-xs-12">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
