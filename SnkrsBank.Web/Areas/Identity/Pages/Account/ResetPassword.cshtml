@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}
<div class="alert alert-alt alert-danger mb alert-large alert-validaiton alert-dismissable fade in" role="alert" asp-validation-summary="All">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"></button>
</div>

<div class="panel panel-white panel-large">
    <div class="panel-body pt-2x pb">

        <h2>@ViewData["Title"]</h2>
        <div class="row">

            <div class="col-xs-12">
                <form method="post" class="form-custom">

                    <input asp-for="Input.Code" type="hidden" />

                    <div class="form-group">
                        <div class="col-xs-12">
                            <div class="md-input">
                                <label asp-for="Input.Email" class="md-input-placeholder"></label>
                                <input type="text" asp-for="Input.Email" class="md-input-control">
                            </div>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-xs-12">
                            <div class="md-input">
                                <label asp-for="Input.Password" class="md-input-placeholder"></label>
                                <input type="password" asp-for="Input.Password" class="md-input-control">
                            </div>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-xs-12">
                            <div class="md-input">
                                <label asp-for="Input.ConfirmPassword" class="md-input-placeholder"></label>
                                <input type="password" asp-for="Input.ConfirmPassword" class="md-input-control">
                            </div>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary mt">Reset</button>

                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
